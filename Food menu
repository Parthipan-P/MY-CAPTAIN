#include<stdio.h>
int main()
{
printf("Menu:\n1.Pizza\n2.Burger\n3.Pasta\n4.French Fries\n5.Sand Wich");
int choice;
printf("Enter your preference:");
scanf("%d",&choice);
switch(choice)
{
case 1:
printf("Food item-Pizza\nPrice-Rs239");
break;
case 2:
printf("Food item-Burger\nPrice-Rs129");
break;
case 3:
printf("Food item-Pasta\nPrice-Rs179");
break;
case 4:
printf("Food item-French Fries\nPrice-Rs99");
break;
case 5:
printf("Food item-Sand Wich\nPrice-Rs179");
break;
default:
printf("Invalid choice");
}
return 0;
}
